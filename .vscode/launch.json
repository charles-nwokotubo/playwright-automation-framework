  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test"],
      "console": "integratedTerminal"
    },
    {
      "name": "debug",
      "type": "node",
      "request": "launch",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test-debug"],
      "console": "integratedTerminal"
    },
    {
      "name": "inspect",
      "type": "node",
      "request": "launch",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": false,
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test-inspect"],
      "console": "integratedTerminal"
    }
  ]
}
